[Unit]
Description=PropBot Service
After=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/crypto-bot/current
Environment=APP_ENV=local
Environment=DEFAULT_PROFILE=paper
ExecStart=/opt/crypto-bot/current/.venv/bin/uvicorn app.server_ws:app --host 0.0.0.0 --port 8000
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
